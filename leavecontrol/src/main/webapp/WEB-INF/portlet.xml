<?xml version="1.0" encoding="UTF-8"?>
<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
             version="2.0"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd
   http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">
    <portlet>
        <portlet-name>LeaveRequestPortlet</portlet-name>
        <portlet-class>com.iway.jbpm.leavecontrol.LeaveRequestPortlet</portlet-class>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>view</portlet-mode>
            <portlet-mode>edit</portlet-mode>
            <portlet-mode>help</portlet-mode>
        </supports>
        <portlet-info>
            <title>Annual Leave Request</title>
        </portlet-info>
    </portlet>

    <portlet>
        <portlet-name>LRManagerViewPortlet</portlet-name>
        <portlet-class>com.iway.jbpm.leavecontrol.LRManagerViewPortlet</portlet-class>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>view</portlet-mode>
            <portlet-mode>edit</portlet-mode>
            <portlet-mode>help</portlet-mode>
        </supports>
        <portlet-info>
            <title>LR Management for Manager(s)</title>
        </portlet-info>
    </portlet>

    <portlet>
        <portlet-name>LRTeamLeaderViewPortlet</portlet-name>
        <portlet-class>com.iway.jbpm.leavecontrol.LRTeamLeaderViewPortlet</portlet-class>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>view</portlet-mode>
            <portlet-mode>edit</portlet-mode>
            <portlet-mode>help</portlet-mode>
        </supports>
        <portlet-info>
            <title>LR Management for TeamLeader(s)</title>
        </portlet-info>
    </portlet>

    <portlet>
        <portlet-name>ProcessInstancesViewPortlet</portlet-name>
        <portlet-class>com.iway.jbpm.monitor.LRProcessInstancesViewPortlet</portlet-class>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>view</portlet-mode>
            <portlet-mode>edit</portlet-mode>
            <portlet-mode>help</portlet-mode>
        </supports>
        <portlet-info>
            <title>Active Process Instances</title>
        </portlet-info>
    </portlet>

</portlet-app>